{
  "openapi": "3.0.0",
  "info": {
    "title": "CPG Gift Wrapping API",
    "description": "Christmas Present Group - Custom Gift Wrapping Price Calculator",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/api/calculate-price": {
      "get": {
        "summary": "Calculate gift wrapping price",
        "description": "Calculates the gift wrapping price based on gift size and optional promo code",
        "operationId": "calculatePrice",
        "parameters": [
          {
            "name": "price",
            "in": "query",
            "description": "The base price for gift wrapping (Small=$15, Medium=$25, Large=$40)",
            "required": false,
            "schema": {
              "type": "number",
              "default": 25
            }
          },
          {
            "name": "promoCode",
            "in": "query",
            "description": "Discount code (e.g., SANTA for $10 off)",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Price calculation result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "basePrice": {
                      "type": "number",
                      "description": "Base price amount"
                    },
                    "discount": {
                      "type": "number",
                      "description": "Discount amount applied"
                    },
                    "promoCode": {
                      "type": "string",
                      "description": "Promo code that was applied"
                    },
                    "finalPrice": {
                      "type": "number",
                      "description": "Final price after discount"
                    }
                  }
                },
                "example": {
                  "basePrice": 25,
                  "discount": 10,
                  "promoCode": "SANTA",
                  "finalPrice": -15
                }
              }
            }
          }
        }
      }
    }
  }
}
